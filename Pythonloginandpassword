mail = "deneme@gmail.com"
sifre = "123456"

kullanici_mail = input("Kullanıcı Mailinizi Giriniz: ")
kullanici_parola = input("Şifre'yi Giriniz: ")

if (kullanici_mail != mail) and (kullanici_parola == sifre):
    print("Mail hatalı")

elif (kullanici_mail == mail) and (kullanici_parola != sifre):
    print("Şifre hatalı..")


elif (kullanici_mail != mail) and (kullanici_parola != sifre):
    print("Mail ve sifre hatalı")

else:
      print("Giriş başarılı")
